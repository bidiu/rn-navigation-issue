{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "jsx": "react",
      "moduleResolution": "node",
      "noEmit": false,
      "outDir": "./lib",
      "skipLibCheck": false,
      "strict": true,
      "target": "esnext",
      "types": ["jest"],
      "lib": ["es6"]
    },
    "exclude": ["node_modules/", "lib/"]
  }
  